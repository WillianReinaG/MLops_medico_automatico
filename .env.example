"""
Configuración de ejemplo para servidor Flask
Copia este archivo a .env y ajusta según tus necesidades
"""

# Base de datos
DATABASE_URL=postgresql://admin:password@db:5432/medical_db

# Flask
FLASK_ENV=production
FLASK_PORT=5000
FLASK_DEBUG=False

# Machine Learning
MODEL_PATH=/app/ml_model/models
ENABLE_MODEL_AUTO_TRAIN=True

# Seguridad
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
